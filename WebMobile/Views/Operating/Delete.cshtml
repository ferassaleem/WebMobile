@model Operating
@{
    ViewData["Title"] = "Delete Operating";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Delete for @Model.OperatingName
            </h1>
        </p>
        <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group text-center">
                <img id="OperatingPicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="OperatingPictureURL" class="control-label">

                    </label>
                    <input asp-for="OperatingPictureURL" class="form-control" readonly />
                    <span asp-validation-for="OperatingPictureURL" class="text-danger">

                    </span>
                </div>
                <div class="form-group">
                    <label asp-for="OperatingName" class="control-label">

                    </label>
                    <input asp-for="OperatingName" class="form-control" readonly />
                    <span asp-validation-for="OperatingName" class="text-danger">

                    </span>
                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        Show All
                    </a>
                </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('OperatingPicturePreview');
            output.src = "@Model.OperatingPictureURL";
        })

    </script>
}
