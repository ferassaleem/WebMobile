@model IEnumerable<Operating_System>

@{
    ViewData["Title"] = "List of Operating_System";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.OperatingPictureURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OperatingName)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.OperatingPictureURL" alt="@item.OperatingName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.OperatingName)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square">

                                </i>
                                Edit
                            </a>
                            <a class="btn btn-outline-info">
                                <i class="bi bi-eye">

                                </i>
                                Details
                            </a>
                            <a class="btn btn-danger text-white">
                                <i class="bi bi-trash">

                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Company" asp-action="Create" class="btn btn-success">
        <i class="bi-plus-circle">

        </i>
        Add New
    </a>
</div>
